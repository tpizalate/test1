{
  "name": "miiyoo-firmware-loader",
  "version": "0.0.1",
  "description": "Vue.js based WebBluetooth firmware loader for Kiiroo Toys",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack-dev-server --open --hot",
    "start:secure": "cross-env NODE_ENV=development webpack-dev-server --open --hot --https --host 192.168.123.3",
    "build": "cross-env NODE_ENV=production webpack --progress --hide-modules",
    "tslint": "tslint -c tslint.json 'src/**/*.ts' 'tests/**/*.ts'",
    "tslint:fix": "tslint -c tslint.json --fix semicolon,comma,no-var-keyword,ordered-imports 'src/**/*.ts' 'tests/**/*.ts'",
    "webpack-defaults": "webpack-defaults",
    "build:main": "tsc -p tsconfig.json",
    "pretest": "yarn build:main",
    "test": "TS_NODE_COMPILER_OPTIONS='{\"module\":\"commonjs\"}' mocha --compilers ts:ts-node/register 'tests/**/*.ts'",
    "deploy": "trash deploy && mkdir -p deploy && cp index.html deploy && cp -r dist deploy"
  },
  "author": "Kyle Machulis <kyle@machul.is>",
  "private": true,
  "dependencies": {
    "tslint": "^5.5.0",
    "viewport-units-buggyfill": "^0.6.1",
    "vue": "^2.3.3",
    "vue-material": "^0.7.4"
  },
  "devDependencies": {
    "@types/node": "^7.0.34",
    "@types/web-bluetooth": "^0.0.3",
    "cross-env": "^3.0.0",
    "css-loader": "^0.25.0",
    "file-loader": "^0.9.0",
    "noop-loader": "^1.0.0",
    "nrf-intel-hex": "^0.3.0",
    "null-loader": "^0.1.1",
    "trash": "^4.2.1",
    "trash-cli": "^1.4.0",
    "ts-loader": "^2.1.0",
    "ts-node": "^3.2.0",
    "typescript": "^2.4.1",
    "uglify-es": "^3.0.24",
    "uglifyjs-webpack-plugin": "^1.0.0-beta.1",
    "url-loader": "^0.5.9",
    "vue-loader": "^12.1.0",
    "vue-property-decorator": "^5.1.1",
    "vue-template-compiler": "^2.3.3",
    "webpack": "^3.5.5",
    "webpack-dev-server": "^2.5.1"
  },
  "pre-push": []
}
